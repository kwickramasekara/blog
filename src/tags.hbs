---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
layout: base
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: Tagged "{{ tag }}"
metaDescription: "All posts from the Blog tagged with “{{ tag }}”"
---

<main>
  <h1 class="tag-title"><span>{{ tag }}</span> posts</h1> 

  <ul class="post-list">
      {{#each (filterObject collections tag) }}
        <li>
          <a href="{{ this.data.page.url }}">{{ this.data.title }}</a>
        </li>
      {{/each}}
  </ul>
</main>