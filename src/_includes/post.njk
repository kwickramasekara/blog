{% extends "./base.njk" %}

{% block headMetaDescription %}
<meta name="description" content="{{ (content | metaDescription) or (site.description) }}" />
{% endblock %}

{% block headLink %}
<link rel="stylesheet" href="https://unpkg.com/prismjs@1.26.0/themes/prism-okaidia.css" />
{% endblock %}

{% block bodyContent %}
<article>
  <section class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <div class="post-meta">
      <span class="post-data with-separator">{{ page.date | postDate }}</span
      ><span class="post-data with-separator"
        >{{ content | readingTime }} min read</span
      ><a class="tag" href="/tags/{{ tags[1] }}">{{ tags[1] }}</a>
    </div>
  </section>

  <section class="post-content">
    {{ content | safe }}
  </section>
</article>
{% endblock %}