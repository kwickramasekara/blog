---
layout: base
---

<article>
    <section class="post-header">
        <h1 class="post-title">{{title}}</h1>
        <div class="post-data">
            <span class="post-date">{{formatDate page.date}}</span><span class="tag"> {{tag}}</span>
        </div>
    </section>

    <section class="post-content">
        {{{content}}}
    </section>
</article>