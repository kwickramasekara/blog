---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
layout: base
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: Tagged "{{ tag }}"
metaDescription: "All posts from the Blog tagged with “{{ tag }}”"
---

<main>
  <h1 class="tag-title">{{ tag }} posts</h1>

  <ul class="post-list">
    {% for post in collections[tag] | reverse %}
    <li>
      <a href="{{ post.data.page.url }}">{{ post.data.title }}</a>
    </li>
    {% endfor %}
  </ul>
</main>
